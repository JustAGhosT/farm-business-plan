# Farm Business Plan - Environment Variables Example
# Copy this file to .env.local for local development

# Database Configuration (Netlify DB / Neon PostgreSQL)
# When deployed to Netlify, these are automatically set by Netlify DB
# For local development, set these to your local or development database
DATABASE_URL="postgresql://username:password@localhost:5432/farm_business_plan"

# Netlify DB Connection Pooler (optional, for production)
# These are automatically set by Netlify when using Netlify DB
# DATABASE_URL_POOLER="postgresql://username:password@pooler.netlify.app:5432/farm_business_plan"

# API Configuration
# Used for client-side API calls (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Production API URL (set automatically by Netlify in production)
# NEXT_PUBLIC_API_URL="https://farmplan.netlify.app"

# Node Environment
NODE_ENV="development"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (Optional)
# GitHub OAuth - Create app at https://github.com/settings/developers
# GITHUB_ID="your-github-client-id"
# GITHUB_SECRET="your-github-client-secret"
# NEXT_PUBLIC_GITHUB_ENABLED="true"

# Google OAuth - Create app at https://console.cloud.google.com/
# GOOGLE_ID="your-google-client-id"
# GOOGLE_SECRET="your-google-client-secret"
# NEXT_PUBLIC_GOOGLE_ENABLED="true"

# Optional: Feature Flags
# ENABLE_AI_FEATURES="false"
# ENABLE_ADVANCED_ANALYTICS="false"
